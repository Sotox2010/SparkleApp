<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="controlId" format="reference"/>
    <attr name="floatingLabelText" format="string"/>
    <attr name="floatingLabelTextAppearance" format="reference"/>
    <attr name="floatingLabelColor" format="reference|color"/>

    <attr name="floatingLabelControlStyle" format="reference"/>
    <attr name="floatingLabelEditTextStyle" format="reference"/>
    <attr name="floatingLabelSpinnerStyle" format="reference"/>
    <attr name="floatingLabelButtonStyle" format="reference"/>

    <attr name="typeface" format="string"/>

    <declare-styleable name="FloatingLabelControl">
        <attr name="controlId"/>
        <attr name="floatingLabelTextAppearance"/>
        <attr name="floatingLabelText"/>
        <attr name="floatingLabelColor"/>
        <attr name="android:gravity"/>
    </declare-styleable>

    <declare-styleable name="FloatingLabelEditText">
        <attr name="textGravity" format="integer"/>
        <attr name="android:textColorHint"/>
        <attr name="android:textColor"/>
        <attr name="android:hint"/>
        <attr name="android:text"/>
        <attr name="android:textAppearance"/>
        <attr name="android:textSize"/>
        <attr name="android:inputType"/>
        <attr name="typeface"/>
    </declare-styleable>

    <declare-styleable name="FloatingHintButton">
        <attr name="android:hint"/>
        <attr name="android:text"/>
        <attr name="android:textAppearance"/>
    </declare-styleable>

    <declare-styleable name="FontTextView">
        <attr name="typeface"/>
    </declare-styleable>


</resources>