<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Sparkle.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/card</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="colorButtonNormal">@color/theme_accent</item>
        <item name="colorControlHighlight">@color/theme_control_highlght</item>

        <item name="floatingLabelControlStyle">@style/Widget.FloatingLabelControl</item>
        <item name="floatingLabelEditTextStyle">@style/Widget.FloatingLabelEditText</item>
        <item name="floatingLabelSpinnerStyle">@style/Widget.FloatingLabelSpinner</item>
    </style>

    <style name="Theme.Sparkle" parent="Theme.Sparkle.Base"/>

    <style name="ProgressBarTheme">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

</resources>